<div class="card">
  <div class="card-header">Two Factor Authentication</div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), method: :post) do |f| %>
      <%= f.label :otp_attempt %>
      <%= f.text_field :otp_attempt %>
      <div class="actions">
        <%= f.submit 'Login', class: 'btn btn-primary mt-2' %>
      </div>
    <% end %>
  </div>
</div>
